MCP_LOG_LEVEL=INFO

# Base URL to your on-prem Azure DevOps Server (TFS/DevOps Server)
# If your base URL already includes the collection, you can leave AZDO_COLLECTION unset.
AZDO_BASE_URL=https://devops.corp.local/tfs
AZDO_COLLECTION=DefaultCollection
AZDO_PROJECT=MyProject

# REST API version supported by your server
AZDO_API_VERSION=7.0

# TLS verification
AZDO_VERIFY_SSL=true

# Authentication: pat | ntlm
AZDO_AUTH_TYPE=pat

# PAT authentication (recommended)
AZDO_PAT=YOUR_PAT_HERE

# NTLM authentication (uncomment and use if PAT not available)
# AZDO_AUTH_TYPE=ntlm
# AZDO_NTLM_USERNAME=jdoe
# AZDO_NTLM_PASSWORD=YOUR_PASSWORD
# AZDO_NTLM_DOMAIN=CORP
